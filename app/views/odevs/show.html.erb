 <style type="text/css">
 .bmd-label-floating{
  font-size: 16px;
  color: black;
}
</style>
<body>
  <div class="wrapper ">
    <%= render 'shared/sidebar'%>
    <div class="main-panel">
      <%= render 'shared/navbar'%>

      <div class="content">

        <div class="container-fluid">
         <div class="row">

          <div class="col-md-12">
            <div class="card">
              <div class="card-header card-header-primary">
                <h4 class="card-title">Öğrenci Bilgileri</h4>

              </div>
              <div class="card-body">
                <form>
                  <div class="row">
                    <div class="col-md-4 col-xs-12 col-sm-6 col-lg-4">
                     <%= image_tag @ogrenci.avatar.url,class: "img-thumbnail", style:"margin-left:40px; width:200px; height:200px;" %>
                   </div>

                   <div class="col-md-8">
                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Adı: </label>
                          <label class="bmd-label-floating"><%= @odev.ad %>
                          </label>

                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Soyadı: </label>
                          <label class="bmd-label-floating"><%= @odev.soyad %>
                          </label>

                        </div>
                      </div>
                    </div>
                    <br>


                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Ogrenci No: </label>
                          <label class="bmd-label-floating"><%= @odev.ogrid %></label>

                        </div>
                      </div>

                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Sınıfı: </label>
                          <label class="bmd-label-floating"><%= @odev.sinif %></label>

                        </div>
                      </div>

                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating">Ders:</label>
                          <label class="bmd-label-floating"><%= @odev.ders_adi %></label>

                        </div>
                      </div>
                    </div>
                  </div>



                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="bmd-label-floating">Ödevin Verildiği Tarih: </label>
                      <label class="bmd-label-floating"><%= @odev.date %>
                      </label>

                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="bmd-label-floating">Ödev Teslim Tarihi: </label>
                      <label class="bmd-label-floating"><%= @odev.teslim_date %>
                      </label>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="bmd-label-floating">Ödev Açıklaması: </label>
                      <label class="bmd-label-floating"><%= @odev.aciklama %>
                      </label>
                    </div>
                  </div>
                </div>

                  <%if current_user.yonetici?%>
                  <%= link_to 'Hesap oluştur', new_user_path(:ogrid => @ogrenci.id), class: "btn btn-primary" %>
                  <%= link_to 'Devamsızlık İşle', new_devamsizlik_path(:tc_no => @ogrenci.id), class: "btn btn-primary" %> 
                  <%= link_to 'Ödev Oluştur', new_odev_path(:ogrid => @ogrenci.id), class: "btn btn-primary" %> 
                  <%= link_to 'Edit', edit_ogrenci_path(@ogrenci), class: "btn btn-primary" %> 
                  <%= link_to 'Back', ogrencis_path, class: "btn btn-primary" %>
                  <%end%>
                  <div class="clearfix"></div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <%= render 'shared/footer'%>
      </div>
    </div>
  </body>


